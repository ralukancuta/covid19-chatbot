{
  "compilerOptions": {
    "baseUrl": "./",
    "declaration": true,
    "paths": {
      "*": [
        "types/*"
      ]
    },
    "types": [
      "node",
    ],
    "typeRoots": [
      "node_modules/@types",
      "custom_typings",
      "node_modules/@ama-team"
    ],
    "module": "commonjs",
    "noImplicitReturns": true,
    "noUnusedLocals": false,
    "outDir": "lib",
    "sourceMap": true,
    "strict": true,
    "target": "ES2018",
    "lib": [
      "es2018"
    ],
    "resolveJsonModule": true
  },
  "compileOnSave": true,
  "include": [
    "./src"
  ],
  "exclude": [
    "./test",
    "./node_modules"
  ]
}